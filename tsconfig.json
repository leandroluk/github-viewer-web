{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    /* Overriding */
    "baseUrl": ".",
    "paths": {
      "#/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src",
    "src/.d.ts",
    "src/components/pages/GithubUserPage/.component.tsx",
    "src/components/pages/GithubUserPage/GithubUserPage.spec.tsx",
    "src/components/pages/GithubUserPage/GithubUserPage.types.tsx"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}